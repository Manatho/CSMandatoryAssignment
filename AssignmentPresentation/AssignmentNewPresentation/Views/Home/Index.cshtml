@model ICollection<AssignmentLogic.Submission>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Submissions</h1>


@if(Model.Count == 0)
{
    <h4>...No submissions</h4>
}

@foreach (AssignmentLogic.Submission s in Model)
{
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">Entry number: @s.SerialNumber</div>

            <ul class="list-group">
                <li class="list-group-item">Full name: @s.FirstName @s.SurName</li>
                <li class="list-group-item">Email: @s.EmailAdress</li>
                <li class="list-group-item">Phone: @s.PhoneNumber</li>
                <li class="list-group-item">Birthday: @s.Birthday.ToShortDateString()</li>
            </ul>
        </div>

    </div>
}




